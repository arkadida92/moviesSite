<!DOCTYPE html>
<html>

<head>
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            margin: auto;
            text-align: center;
            font-family: arial;
        }

        .price {
            color: grey;
            font-size: 22px;
        }

        .card button {
            border: none;
            outline: 0;
            padding: 12px;
            color: white;
            background-color: rgb(168, 5, 5);
            text-align: center;
            cursor: pointer;
            width: 100%;
            font-size: 18px;
        }

        .card button:hover {
            opacity: 0.7;
        }
    </style>
</head>

<body>

    <h2 style="text-align:center">Movie Information</h2>

    <div class="card">
        <img src="<%= movie.image %>" alt="" style="width:100%">
        <h1><%= movie.name %></h1>
        <h3>Language: <%= movie.language %></h3>
        <p>
            Genres: <br /> |
            <% movie.genres.forEach(g => { %>
            <%= g %> |
            <% }) %>
        </p>
        <p><button onclick="goBack()">Back to search results</button></p>
    </div>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
</body>

</html>